        <Button x:ConnectionId='3' Grid.Row="3" Grid.Column="6" x:Name="BuyNow_Btn" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Buy Now" Foreground="White" Background="Green"/>
        <TextBlock Grid.Row="9" Grid.Column="4" Grid.ColumnSpan="5" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text="Other Related Products :" FontStyle="Italic" FontWeight="Bold" Foreground="ForestGreen"/>
        <Image x:ConnectionId='4' Grid.Row="11" Grid.RowSpan="3" Grid.Column="4" x:Name="otherProducts1" HorizontalAlignment="Left" Source="Assets/Hard Disk.jpg" VerticalAlignment="Center"/>
        <Button x:ConnectionId='5' x:Name="details1" Grid.Row="14" Grid.RowSpan="2" Grid.Column="4" HorizontalAlignment="Center" Content="Details" VerticalAlignment="Top" Background="Maroon" Foreground="White" Height="25" Width="100" FontSize="10"/>
        <Image x:ConnectionId='6' Grid.Row="11" Grid.RowSpan="3" Grid.Column="6" x:Name="otherProducts2" HorizontalAlignment="Center" Source="Assets/Keyboard.jpg" VerticalAlignment="Center"/>
