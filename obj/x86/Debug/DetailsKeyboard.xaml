        <Image x:ConnectionId='11' Grid.Row="1" Grid.Column="1"  HorizontalAlignment="Right" VerticalAlignment="Center" Source="Assets/Keyboard.jpg" Height="230" Width="90"                      />
        <Image x:ConnectionId='12' Grid.Row="1" Grid.Column="1"  HorizontalAlignment="Right" VerticalAlignment="Bottom" Source="Assets/Keyboard.jpg" Height="230" Width="90"                      />

